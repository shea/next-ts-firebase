{
  "name": "next-ts-firebase",
  "version": "1.0.0",
  "description": "Boilerplate for a React app with Next.js using Typescript on Firebase",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "dev": "next src/app",
    "preserve": "npm run build-public && npm run build-functions && npm run build-app && npm run copy-deps && npm run install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "firebase deploy",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "build-app": "next build \"src/app\"",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
    "build-functions": "tsc --project src/functions",
    "lint-app": "tslint --project src/app",
    "typecheck-app": "tsc --project src/app",
    "lint-functions": "tslint --project src/functions",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && npm i"
  },
  "dependencies": {
    "@emotion/core": "^10.0.7",
    "@emotion/styled": "^10.0.7",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-less": "^1.0.1",
    "@zeit/next-typescript": "^1.1.0",
    "antd": "^3.13.2",
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.2.0",
    "less": "^3.9.0",
    "next": "^8.0.0",
    "next-compose-plugins": "^2.1.1",
    "next-redux-saga": "^3.0.0",
    "next-redux-wrapper": "^3.0.0-alpha.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.0.1",
    "typesafe-actions": "^3.0.0"
  },
  "devDependencies": {
    "@types/next": "^8.0.0",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-redux": "^7.0.1",
    "babel-plugin-emotion": "^10.0.7",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "firebase-tools": "^6.1.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  }
}
